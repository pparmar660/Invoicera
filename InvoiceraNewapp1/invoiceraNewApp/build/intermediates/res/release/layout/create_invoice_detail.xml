<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.invoicera.androidapp.Home">

    <RelativeLayout
        android:id="@+id/liner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line_background"
        android:padding="10dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="14dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Invoice"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="14dp"
            android:src="@drawable/save" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiogtup"
            android:layout_margin="10dp"
            android:background="@drawable/box_background"
            android:orientation="vertical">

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bottom_line_background"
                android:hint="Invoice#"
                android:textCursorDrawable="@drawable/color_cursor"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/lightgray02" />

            <EditText
                android:id="@+id/invoiceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bottom_line_background"
                android:hint="Invoice Title"
                android:textCursorDrawable="@drawable/color_cursor"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/lightgray02" />

            <EditText
                android:id="@+id/invoiceNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bottom_line_background"
                android:hint="Invoice Note"
                android:textCursorDrawable="@drawable/color_cursor"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/lightgray02" />

            <EditText
                android:id="@+id/invoiceTermAndCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bottom_line_background"
                android:hint="Terms and Conditions"
                android:padding="10dp"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColor="#000"
                android:textColorHint="@color/lightgray02" />

            <TextView
                android:text="Invoice Date :"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"

                android:layout_height="wrap_content"

                android:textSize="15sp"
                android:paddingRight="20dp"

                android:textColor="#000" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bottom_line_background"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:text=""
                android:drawableRight="@drawable/date_format"
                android:textColor="#000"
                android:id="@+id/invoice_date" />

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"

                android:layout_height="wrap_content"
                android:text="Due Date :"
                android:textSize="15sp"
                android:paddingRight="20dp"

                android:textColor="#000" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bottom_line_background"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/due_date"
                android:text=""
                android:drawableRight="@drawable/date_format"
                android:textColor="#000" />

            <TextView
                android:text="Schedule On :"

                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingRight="20dp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/scheduled_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bottom_line_background"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:text=""
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/date_format"
                android:textColor="#000" />


            <TextView
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:id="@+id/latefeeSelect"
                android:layout_height="wrap_content"
                android:text="Late Fee :"
                android:textSize="15sp"
                android:paddingRight="20dp"
                android:drawableRight="@drawable/ar"

                android:textColor="#000" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#B5B5B5"/>

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:padding="10dp"

                android:layout_height="wrap_content"
                android:text="Value"
                android:id="@+id/late_fee_value"
                android:textSize="15sp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#3F3F3F" />


        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/home/vinove/Desktop/InvoiceraAppStudioVersion/InvoiceraNewapp1/invoiceraNewApp/src/main/res/layout/create_invoice_detail.xml -->
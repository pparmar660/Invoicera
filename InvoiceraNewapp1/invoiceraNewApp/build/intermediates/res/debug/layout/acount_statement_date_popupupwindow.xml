<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popUpLiner"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@drawable/underline_background"
        android:padding="10dp"
        android:text="Please enter Account Statement dates"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/fromDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_background"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="From :"
        android:textColor="@color/black"

        android:gravity="center_vertical"
        android:drawableRight="@drawable/calender"/>

    <TextView
        android:id="@+id/toDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_background"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="To :"
        android:textColor="@color/black"

        android:gravity="center_vertical"
        android:drawableRight="@drawable/calender"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel_action"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@color/gray"
            android:text="Cancel"
            android:textColor="@color/white"

            />

        <TextView
            android:id="@+id/ok_action"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@color/orange2"
            android:text="Ok"
            android:textColor="@color/white"

            />


    </LinearLayout>

</LinearLayout><!-- From: file:/home/vinove/Desktop/InvoiceraAppStudioVersion/InvoiceraNewapp1/invoiceraNewApp/src/main/res/layout/acount_statement_date_popupupwindow.xml -->
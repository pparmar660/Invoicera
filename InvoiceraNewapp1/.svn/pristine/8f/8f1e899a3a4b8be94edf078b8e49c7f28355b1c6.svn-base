<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/creteNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EBEBEB"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/liner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Due in Recipt"
                        android:textColor="#8D8D8D"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/invoice_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Today"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/liner1"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:padding="5dp"
                        android:text="Invoice"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:padding="5dp"
                        android:text="#5"
                        android:textColor="#8D8D8D"
                        android:textSize="15sp" />
                </LinearLayout>
            </RelativeLayout>


            <TextView
                android:id="@+id/selectClientView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"

                android:background="@drawable/bottom_line_background"
                android:drawableLeft="@drawable/add_client"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ar"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingRight="20dp"
                android:text="Add Client"
                android:textColor="#000"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/item_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"

                android:background="@drawable/bottom_line_background"
                android:drawableLeft="@drawable/add_item"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ar"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingRight="20dp"
                android:text="Add Item"
                android:textColor="#000"
                android:textSize="20sp" />


            <LinearLayout
                android:id="@+id/linear_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/bottom_line_background"
                android:orientation="vertical">

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/addItemLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_centerInParent="true"
                    android:background="@color/lightgray02" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/add_item_new"
                    android:padding="5dp"
                    android:text="Add Item"
                    android:textColor="@color/orange2" />


            </RelativeLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="15dp"
                android:background="@drawable/aboveline_backround"
                android:gravity="right"
                android:padding="1dp">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline_background"
                    android:gravity="right"
                    android:orientation="horizontal"

                    android:padding="10dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="Sub total :"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/subtotalValue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="2dp"
                        android:text="0.0"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline_background"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text=" Tax on items:"
                        android:textColor="@color/gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/total_tax_on_item"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="2dp"
                        android:text="0.0"

                        android:textColor="@color/gray"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline_background"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="Total :"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="2dp"
                        android:text="0.0"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </TableRow>

                <RelativeLayout
                    android:id="@+id/discountOnTotalLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline_background"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="visible"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@+id/discountLinear12"
                        android:gravity="center_vertical|right"
                        android:text="Discount :"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:textStyle="normal"/>

                    <LinearLayout
                        android:id="@+id/discountLinear12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical|right"
                        android:orientation="vertical"
                        android:paddingLeft="20dp">

                        <RadioGroup
                            android:id="@+id/discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_below="@+id/liner1"
                            android:orientation="vertical">


                            <RadioButton
                                android:id="@+id/flat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/custom_radiobuton"
                                android:checked="true"
                                android:drawablePadding="5dp"
                                android:padding="10dp"
                                android:text=" Flat Rate  "
                                android:textColor="#3E3E3E"
                                android:textSize="10sp" />

                            <RadioButton

                                android:id="@+id/percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:button="@drawable/custom_radiobuton"
                                android:checked="false"
                                android:drawableLeft="@null"
                                android:drawablePadding="10dp"
                                android:padding="10dp"
                                android:text=" Percentage"
                                android:textColor="#3E3E3E"
                                android:textSize="10sp" />

                        </RadioGroup>

                        <EditText
                            android:id="@+id/discountValue"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/box_background"
                            android:hint="Discount Value"
                            android:inputType="numberDecimal"
                            android:padding="5dp"
                            android:textColor="#3F3F3F"
                            android:textColorHint="@color/lightgray02"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="15sp" />


                    </LinearLayout>
                </RelativeLayout>

                <TableRow
                    android:id="@+id/total_after_discountLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline_background"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="right"


                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total:"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(after discount)"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/total_after_discount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center_vertical|right"
                        android:text="0.0"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline_background"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1"

                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/addCharges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"

                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/plus_1"
                            android:gravity="center_vertical"
                            android:text="Additional Charges :"
                            android:textColor="@color/gray"
                            android:textSize="16sp" />


                        <com.invoicera.CustomView.NoScrollListView
                            android:id="@+id/chargeslistView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline_background"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="Net Balance:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/netBalance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="0.0"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/taxOnTotalLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline_background"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:weightSum="1"

                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/addTax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/plus_1"
                            android:gravity="center_vertical"

                            android:text=" Tax :"
                            android:textColor="@color/gray"
                            android:textSize="16sp" />


                        <com.invoicera.CustomView.NoScrollListView

                            android:id="@+id/taxlistView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </TableRow>









                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline_background"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="Gross total :"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/grossTotal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center_vertical|right"
                        android:text="0.0"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </TableRow>
                <TableRow
                    android:id="@+id/lateFeeLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline_background"
                    android:gravity="right"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="Late Fee:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/lateFee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="0.0"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </TableRow>
                <TableRow
                    android:id="@+id/amountPaidLiner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline_background"
                    android:gravity="right"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="Amount Paid :"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/amountPaid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="0.0"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </TableRow>
                <TableRow
                    android:id="@+id/outStandingLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline_background"
                    android:gravity="right"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="Outstanding :"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/outStanding"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="0.0"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </TableRow>


                <TableRow
                    android:id="@+id/allowPartialPaymentLinear"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:background="@drawable/underline_background"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center_vertical|right"
                        android:text="Allow partial payment :"
                        android:textColor="@color/gray"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/allowPartialPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:button="@drawable/custom_checkbox"
                        android:checked="true"
                        android:gravity="center_vertical|right"
                        android:textSize="10sp" />

                </TableRow>

                <TableRow

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:background="@drawable/underline_background"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/paymentGateWay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="20dp"
                        android:drawableRight="@drawable/ar"
android:layout_marginRight="10dp"
                        android:text="Get Paid Quicker:"
                        android:textColor="@color/gray"
                        android:textSize="16sp" />

                </TableRow>

            </TableLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/underline_background"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#6CA919"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Send by Mail"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#979797"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Save as Draft"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
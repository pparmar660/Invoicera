<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.invoicera.androidapp.Home">

    <RelativeLayout
        android:id="@+id/liner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line_background"
        android:padding="10dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="14dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Estimate"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="14dp"
            android:src="@drawable/save" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radiogtup"
            android:layout_margin="10dp"
            android:background="@drawable/box_background"
            android:orientation="vertical">

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bottom_line_background"
                android:hint="Estimate#"
                android:textCursorDrawable="@drawable/color_cursor"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/lightgray02" />

            <EditText
                android:id="@+id/estimateTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bottom_line_background"
                android:hint="Estimate title"
                android:textCursorDrawable="@drawable/color_cursor"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/lightgray02" />

            <EditText
                android:id="@+id/estimateNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bottom_line_background"
                android:hint="Estimate note"
                android:textCursorDrawable="@drawable/color_cursor"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="@color/lightgray02" />

            <EditText
                android:id="@+id/estimateTermAndCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bottom_line_background"
                android:hint="Term and condition"
                android:padding="10dp"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColor="#000"
                android:textColorHint="@color/lightgray02" />

            <TextView
                android:text="Estimate Date :"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"

                android:layout_height="wrap_content"

                android:textSize="15sp"
                android:paddingRight="20dp"

                android:textColor="#000" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bottom_line_background"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:text=""
                android:drawableRight="@drawable/date_format"
                android:textColor="#000"
                android:id="@+id/invoice_date" />

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"

                android:layout_height="wrap_content"
                android:text="Due Date :"
                android:textSize="15sp"
                android:paddingRight="20dp"

                android:textColor="#000" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bottom_line_background"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/due_date"
                android:text=""
                android:drawableRight="@drawable/date_format"
                android:textColor="#000" />

            <TextView
                android:text="Schedule on :"

                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingRight="20dp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/scheduled_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/bottom_line_background"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:text=""
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/date_format"
                android:textColor="#000" />





        </LinearLayout>
    </ScrollView>

</LinearLayout>
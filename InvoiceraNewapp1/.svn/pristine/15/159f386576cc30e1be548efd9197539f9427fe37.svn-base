<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    xmlns:android="http://schemas.android.com/apk/res/android"

    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/logo"
                android:layout_gravity="center_vertical"
                android:src="@drawable/invoice_preview_img"
                android:padding="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:paddingLeft="2dp"
                    android:id="@+id/senderName"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Sender Name" />


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TableRow
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:weightSum="100"
                        android:orientation="horizontal">


                        <TextView
                            android:paddingTop="5dp"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight="30"

                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:paddingRight="2dp"
                            android:text="" />

                        <TextView
                            android:paddingTop="5dp"
                            android:textSize="15sp"

                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="" />


                        <TextView
                            android:paddingTop="5dp"
                            android:textSize="15sp"
                            android:paddingLeft="5dp"
                            android:id="@+id/senderAddress"
                            android:layout_width="0dp"
                            android:layout_weight="67"
                            android:gravity="right"
                            android:singleLine="false"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="Add:New Delhidad aew fsfsdf efefwewe" />


                    </TableRow>

                    <TableRow
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:weightSum="100"
                        android:orientation="horizontal">


                        <TextView
                            android:paddingTop="5dp"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight="30"

                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:paddingRight="2dp"
                            android:text="Ph" />

                        <TextView
                            android:paddingTop="5dp"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text=":" />


                        <TextView
                            android:paddingTop="5dp"
                            android:textSize="15sp"
                            android:paddingLeft="5dp"
                            android:id="@+id/senderNumber"
                            android:layout_width="0dp"
                            android:layout_weight="67"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="23232323233" />


                    </TableRow>

                    <TableRow
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:weightSum="100"
                        android:orientation="horizontal">


                        <TextView
                            android:paddingTop="5dp"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight="30"

                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:paddingRight="2dp"
                            android:text="Invoice" />

                        <TextView
                            android:paddingTop="5dp"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text=":" />


                        <TextView
                            android:paddingTop="5dp"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight="67"
                            android:gravity="right"
                            android:id="@+id/invoiceNumber"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="INV:123" />


                    </TableRow>

                    <TableRow
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:weightSum="100"
                        android:orientation="horizontal">


                        <TextView
                            android:paddingTop="5dp"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight="30"

                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:paddingRight="2dp"
                            android:text="Date" />

                        <TextView
                            android:paddingTop="5dp"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text=":" />

                        <TextView
                            android:paddingTop="5dp"
                            android:textSize="15sp"
                            android:paddingLeft="15dp"
                            android:layout_width="0dp"
                            android:layout_weight="67"
                            android:gravity="right"
                            android:id="@+id/date"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="3/7/16" />


                    </TableRow>


                </TableLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="40dp"
            android:padding="10dp"
            android:background="#A5A5A5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/clientName"
                android:singleLine="false"
                android:text="Bill to: John Sina " />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:id="@+id/clientAddress"
                android:singleLine="false"
                android:paddingTop="20dp"
                android:text="Add: Block:123,Tower B, LS,US" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:id="@+id/ClientNumber"
                android:paddingTop="5dp"
                android:text="Ph: +145-2212121" />


        </LinearLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:id="@+id/itemTable">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"

                android:orientation="horizontal"
                android:background="@drawable/table_header_border">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="54"
                    android:layout_height="wrap_content"
                    android:text="Service/Product"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="4dp"

                    android:textColor="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:background="#B5B5B5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_height="wrap_content"
                    android:text="Discount"
                    android:layout_gravity="end"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="4dp"

                    android:textColor="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:background="#B5B5B5" />


                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="4dp"

                    android:textColor="@color/black" />


            </TableRow>


        </TableLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:text="Sub total : " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:padding="10dp"
                android:paddingTop="5dp"
                android:text="2121" />


        </LinearLayout>


    </LinearLayout>
</ScrollView>
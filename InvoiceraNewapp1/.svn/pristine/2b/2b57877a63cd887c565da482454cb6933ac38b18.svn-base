            android:layout_height="wrap_content"
            android:src="@drawable/time_zone" />

        <Spinner
            android:id="@+id/time_zone_customspinner"
            android:layout_width="match_parent"   
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background" />
    </LinearLayout>


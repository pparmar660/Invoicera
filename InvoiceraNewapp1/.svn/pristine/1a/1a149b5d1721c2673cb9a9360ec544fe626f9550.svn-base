<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <style name="InvoiceList" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator_InvoiceList</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:actionMenuTextColor">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dip</item>
        <item name="android:background">@color/lightgray02</item>
    </style>
    <!-- First Indicater Style -->
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:textAppearance">@style/MyTabPageIndicator.Text</item>
        <item name="selectedColor">#B6B6B6</item>
    </style>

    <style name="MyTabPageIndicator.Text" parent="TextAppearance.TabPageIndicator">
        <item name="android:textColor">#494949</item>
        <item name="selectedColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Second Indicater Style -->

    <style name="CustomTabPageIndicator_InvoiceList" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/tab_indicator_invoicelist</item>
        <item name="android:textAppearance">@style/MyTabPageIndicator_InvoiceList.Text</item>

    </style>

    <style name="MyTabPageIndicator_InvoiceList.Text" parent="TextAppearance.TabPageIndicator">
        <item name="android:textColor">#FBD2B2</item>
        <item name="selectedColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>